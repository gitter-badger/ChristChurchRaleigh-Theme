{% set count = page.header.items|count %}
<section class="serve row">

	<div class="col-1-3">
		<h2 class="big-title"><span>{{ page.title }}</span></h2>

		<div class="item">
			<h3>{{ page.header.items[count].title }}</h3>
			<div>{{ page.header.items[count].content }}</div>
		</div>
	</div>

	<div class="col-2-3">
		
		<div class="row">
		{% set i = 1 %}
		{% for item in page.header.items %}
			{% if i < count %}
			<div class="col-1-2">
				<div class="item">
					<h3>{{ item.title }}</h3>
					<div>{{ item.content }}</div>
				</div>
			</div>
			{% set i = i+1 %}
			{% endif %}
		{% endfor %}
		</div>

	</div>
	
</section>