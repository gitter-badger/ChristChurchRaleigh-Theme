<section class="highlights">

	<h2 class="center">{{ page.title }}</h2>
	{{ page.content }}

	<div class="items">
		{% for highlight in page.header.highlights %}
			<div class="item">
				<i class="fa fa-{{ highlight.icon }} fa-4x"></i>
				<h3 class="title">{{ highlight.title }}</h3>
				<div class="content">{{ highlight.content }}</div>
			</div>
		{% endfor %}
	</div>

</section>