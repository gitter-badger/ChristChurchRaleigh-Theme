{# I prefer adding some sort of section title in the editor for a callout #}
{# <h3>{{ page.title }}</h3> #}
<section class="values row">

	
	<h3>{{ page.title }}</h3>

	{% set i = 1 %}
	{% for value in page.header.values %}
		<div class="col-1-4">
			<div class="value">
				<!--i>{{ i }}</i-->{% set i = i+1 %}
				<!--i class="fa fa-{{ value.icon }} fa-3x"></i-->
				<div>{{ value.content }}</div>
			</div>
		</div>
	{% endfor %}
	
</section>