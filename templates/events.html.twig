{% extends 'partials/base.html.twig' %}

{% set collection = page.collection() %}

{% block content %}

	{# page header image #}
	{% set header_image = page.media.images|first %}
	{% if header_image != null %}
	<header class="masthead">
		{{ header_image.cropZoom(1920,320).html }}
	</header>
	{% endif %}

	<div class="container">
		<article class="event">
			<header>
				{% set event_image = page.header.event.image %}
				{% if event_image != null %}
				<header class="masthead">
					{{ image.cropZoom(1920,320).html }}
				</header>
				{% endif %}
				<h1>{{ page.title }}</h1>
			</header>
			<section>
				{{ page.content }}

				{% if page.header.expanders != null %}
					{% for expander in page.header.expanders %}
						<div class="expander">
							<a href="javascript:void(0)" class="expander-trigger expander-hidden">{{ expander.title }}</a>
							<div class="expander-content">
								{{ expander.content|markdown }}
							</div>
						</div>
					{% endfor %}
				{% endif %}
			</section>
			<footer>
			{{ page.header.content.footer|markdown }}
			</footer>
		</article>

		{# include sidebar #}
		{% include 'partials/sidebar.html.twig' with { 'page': page } %}

	</div>

{% endblock %}